{
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "DOM.Iterable", "es2017"],
    "downlevelIteration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["react/next", "react-dom/next"]
  }
}
